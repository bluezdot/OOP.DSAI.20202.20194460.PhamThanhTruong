<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Option">
                  <items>
                      <Menu mnemonicParsing="false" text="Update Store">
                        <items>
                          <MenuItem mnemonicParsing="false" text="Add Book" />
                              <MenuItem mnemonicParsing="false" text="Add CD" />
                              <MenuItem mnemonicParsing="false" text="Add DVD" />
                        </items>
                      </Menu>
                        <MenuItem mnemonicParsing="false" text="View Store" />
                        <MenuItem mnemonicParsing="false" text="View Cart" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label text="CART" textFill="AQUA">
               <font>
                  <Font size="50.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <children>
                  <Label text="Filter:">
                     <padding>
                        <Insets right="5.0" />
                     </padding></Label>
                  <TextField />
                  <RadioButton mnemonicParsing="false" selected="true" text="By ID">
                     <toggleGroup>
                        <ToggleGroup fx:id="filterCatagory" />
                     </toggleGroup>
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="By Title" toggleGroup="$filterCatagory">
                     <padding>
                        <Insets left="5.0" />
                     </padding></RadioButton>
               </children>
            </HBox>
            <TableView fx:id="tblMedia" prefHeight="568.0" prefWidth="838.0">
              <columns>
                <TableColumn fx:id="colMediaTitle" maxWidth="351.0" minWidth="-1.0" prefWidth="351.0" text="Title" />
                <TableColumn fx:id="colMediaCategory" maxWidth="677.0" prefWidth="252.0" text="Category" />
                  <TableColumn fx:id="colMediaCost" maxWidth="825.0" minWidth="-Infinity" prefWidth="254.0" text="Cost" />
              </columns>
            </TableView>
            <HBox prefHeight="79.0" prefWidth="506.0">
               <children>
                  <Button fx:id="btnPlay" mnemonicParsing="false" text="Play" />
                  <Button fx:id="btnRemove" mnemonicParsing="false" onAction="#btnRemovePressed" text="Remove" />
               </children>
               <VBox.margin>
                  <Insets left="710.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="50.0" />
         </padding>
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Total:">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </Label>
                  <Label text="0 $" textFill="AQUA">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Button mnemonicParsing="false" style="-fx-background-color: red;" text="Place Order" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>
